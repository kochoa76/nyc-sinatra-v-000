<h1> Edit a Figure: </h1>

<form action="/figures/#{@figure.id}" method="POST">


<h4><%=@figure.name%></h4>
  <input type="hidden" name="_method" value="PATCH">

  <label> Name: </label>
  <input type="text" name="figures[name]">
  <br></br>

<label>Edit Titles: </label>
<%Title.all.each do |title| %>
  <%=title.name%>
  <input type="checkbox" name="figures[title_ids][]" value="<%=title.id%>" id="<%=title.name%>" <%='checked' if @figure.titles.include?(title)%>>
  <%end%>
  <br></br>

<label for="new_title"> Add New Title: </label>
<input type="text" name="title[name]" id="new_title">

<br></br>

<label> Edit Landmarks: </label>
<%Landmark.all.each do |landmark| %>
  <%=landmark.name%>
  <input type="checkbox" name="figures[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
<%end%>

<br></br>

<label for="new_landmark"> Add New Landmark: </label>
<input type="text" name="landmark[name]" id="new_landmark">

<input type="submit" value="Edit Figure">
</form>
