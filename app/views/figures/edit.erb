<h1> Edit a Figure: </h1>

<form action="/figures/#{@figure.id}" method="POST">


<h4><%=@figure.name%></h4> 
  <input type="hidden" name="_method" value="PATCH">

  <label> Name: </label> 
  <input type="text" name="figures[name]"> 

<label> Titles: </label> 
<%Title.all.each do |title| %> 
  <input type="checkbox" name="figures[title_ids][]" value="<%=title.id%>" id="<%=title.name%>"> <%='checked' if @figure.titles.include?(title)%>>
  <%end%> 

<label> Landmarks: </label> 
<%Landmark.all.each do |landmark| %> 
  <input type="checkbox" name="figures[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark)%>>
<%end%> 


  
